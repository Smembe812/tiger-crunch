        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.27",
        "@types/sinon": "^9.0.10",
        "chai": "^4.3.0",
        "chai-as-promised": "^7.1.1",
        "chai-subset": "^1.6.0",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "lerna": "^4.0.0",
        "mocha": "^8.2.1",
        "nodemon": "^2.0.4",
        "proxyquire": "^2.1.3",
        "sinon": "^9.2.4",
        "supertest": "^6.1.3",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.9.5"
