    "version": "0.1.4",
    "description": "kafka broker for project tiger-crunch",
    "main": "./lib/",
    "scripts": {
        "dev": "tsc -b tsconfig.json -w",
        "start": "nodemon ./lib/index.js",
        "compile": "tsc -b",
        "clean": "rm -rf ./lib && rm -rf tsconfig.build.tsbuildinfo",
