{  
  "exclude": [
    "node_modules", 
    "lib",
    "packages/oauth-server/__tests__",
    "packages/**/node_modules", 
    "packages/**/lib",
    "packages/**/__tests__"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "allowJs": true,
    "composite": true
  },
  "baseUrl": "./",
  "references": [],
  "include": ["packages/**/*", "packages/**/*.d.ts"],
  "ts-node": {
    "files":true
  }
}
